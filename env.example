# Configuración del servidor
PORT=3000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Base de datos
DATABASE_URL=estilo_activo.db

# JWT
JWT_SECRET=your-super-secret-jwt-key-here

# Sesiones
SESSION_SECRET=your-super-secret-session-key-here

# Email (Gmail)
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Facebook OAuth
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Stripe (para pagos con tarjeta)
STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key

# Nequi API (si está disponible)
NEQUI_API_URL=https://api.nequi.com
NEQUI_CLIENT_ID=your-nequi-client-id
NEQUI_CLIENT_SECRET=your-nequi-client-secret

# Bancolombia API (si está disponible)
BANCOLOMBIA_API_URL=https://api.bancolombia.com
BANCOLOMBIA_CLIENT_ID=your-bancolombia-client-id
BANCOLOMBIA_CLIENT_SECRET=your-bancolombia-client-secret
